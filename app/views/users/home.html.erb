<div class="header">
  <h1>ExploreCourses Updater!</h1>
</div>

<div class="form-container">
  <%= simple_form_for @user, url: '/users/submit', html: { id: 'main-form' } do |f| %>

    <div class="form-section email-section">
      <%= f.input :email,
        placeholder: 'name@stanford.edu',
        class: 'form-control',
        required: ''
      %>
    </div>

    <div class="form-section subject-settings-section">
      <% UrlHelper.get_departments.each do |school| %>
        <div class="col-1">
          <%= f.input :pending_subject_settings,
            collection: school['departments'].select { |d| d['col'] == 1 }.collect { |d| ["#{d['name']} (#{d['code']})", "#{d['code']}"] }.to_h,
            label: school['school'],
            input_html: { multiple: true },
            required: false,
            as: :check_boxes
          %>
        </div>

        <div class="col-2">
          <%= f.input :pending_subject_settings,
            collection: school['departments'].select { |d| d['col'] == 2 }.collect { |d| ["#{d['name']} (#{d['code']})", "#{d['code']}"] }.to_h,
            label: false,
            input_html: { multiple: true },
            required: false,
            as: :check_boxes
          %>
        </div>
      <% end %>
    </div>

    <div class="form-navigation">
      <button type="button" class="next btn btn-info pull-right">Update settings</button>
      <input type="submit" class="btn btn-default pull-right">
      <span class="clearfix"></span>
    </div>
  <% end %>
</div>